<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:custom="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".DetailActvity"
		android:background="#000">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:orientation="vertical">
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Cafeteria"
					android:textColor="#fff"
					android:textAlignment="center"
					android:textAppearance="@style/TextAppearance.AppCompat.Display2"
					android:padding="@dimen/_8dp"
					android:layout_marginStart="@dimen/_8dp"
					android:layout_marginEnd="@dimen/_8dp"
					android:layout_marginBottom="@dimen/_8dp"
					android:layout_marginTop="12dp"

					/>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Co Value:"
					android:layout_weight="1"
					android:textColor="#fff"
					android:textAlignment="viewEnd"
					android:textAppearance="@style/TextAppearance.AppCompat.Display1"
					android:layout_margin="@dimen/_8dp"
					/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/coconcentration"
					android:text="3.5 ppm"
					android:layout_weight="1"
					android:textColor="#4CAF50"
					android:textAlignment="viewStart"
					android:textAppearance="@style/TextAppearance.AppCompat.Display1"
					android:padding="@dimen/_8dp"
					android:layout_margin="@dimen/_8dp"/>
			</LinearLayout>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Co2 Value:"
					android:layout_weight="1"
					android:textColor="#fff"
					android:textAlignment="viewEnd"
					android:textAppearance="@style/TextAppearance.AppCompat.Display1"
					android:layout_margin="@dimen/_8dp"
					/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0.0 ppm"
					android:id="@+id/co2concentration"
					android:layout_weight="1"
					android:textColor="#4CAF50"
					android:textAlignment="viewStart"
					android:textAppearance="@style/TextAppearance.AppCompat.Display1"
					android:padding="@dimen/_8dp"
					android:layout_margin="@dimen/_8dp"/>
			</LinearLayout>

		</LinearLayout>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:orientation="horizontal"
				android:layout_weight="2"
				android:layout_marginBottom="12dp"
				>
			<com.github.lzyzsd.circleprogress.ArcProgress
					android:id="@+id/co_progress"
					android:background="#000"
					android:layout_width="0dp"
					app:arc_finished_color="#4CAF50"
					app:arc_unfinished_color="#B2BAB2"
					app:arc_text_color="#4CAF50"
					android:layout_height="400dp"
					android:layout_gravity="bottom"
					android:layout_weight="2"
					android:padding="@dimen/_8dp"
					android:layout_margin="@dimen/_8dp"
					custom:arc_progress="55"
					custom:arc_bottom_text="Co"
					app:arc_text_size="40sp"
					app:arc_bottom_text_size="40sp"
			/>

			<com.github.lzyzsd.circleprogress.ArcProgress
					android:id="@+id/co2_progress"
					android:background="#000"
					android:layout_width="0dp"
					android:layout_height="200dp"
					android:layout_gravity="bottom"
					app:arc_finished_color="#4CAF50"
					app:arc_unfinished_color="#B2BAB2"
					app:arc_text_color="#4CAF50"
					android:padding="@dimen/_8dp"
					android:layout_margin="@dimen/_8dp"
					custom:arc_progress="55"
					custom:arc_bottom_text="Co2"
					android:layout_weight="1"
					android:layout_marginBottom="8dp"
					app:arc_text_size="30sp"
					app:arc_bottom_text_size="20sp"
			/>
			
		</LinearLayout>
	</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>